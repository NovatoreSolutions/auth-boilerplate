{
  "type":"object",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://indoor-mapping.com/schemas/user-update",
  "description": "Update user",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50,
      "description": "First Name of the user"
    },
    "type": {
      "type": "string",
      "description": "Type of the user"
    },

    "email": {
      "type": "string",
      "format": "email",
      "description" : "Email of the Corporate Manager"
    }
  },
  "additionalProperties": true,
  "required": ["email", "firstName", "lastName","type"]
}